{
  "name": "smu-course-review",
  "version": "0.1.0",
  "private": true,
  "description": "海大选课通 — 上海海事大学课程评价平台",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "dev:worker": "wrangler pages dev dist",
    "db:schema": "wrangler d1 execute ouc-course-review --file=db/schema.sql --local",
    "db:seed": "wrangler d1 execute ouc-course-review --file=db/seed.sql --local",
    "db:schema:remote": "wrangler d1 execute ouc-course-review --file=db/schema.sql --remote",
    "db:seed:remote": "wrangler d1 execute ouc-course-review --file=db/seed.sql --remote",
    "deploy": "wrangler pages deploy dist",
    "build:static": "vue-tsc --noEmit && vite build --mode static"
  },
  "dependencies": {
    "pinia": "^3.0.0",
    "sql.js": "^1.14.0",
    "vue": "^3.5.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "typescript": "^5.8.0",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.0",
    "wrangler": "^4.0.0"
  }
}
